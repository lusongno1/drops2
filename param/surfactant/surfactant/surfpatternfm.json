{
    "General": {
        "ProgressBar":  1,
        "DynamicLibsPrefix": "../",
        "DynamicLibs": [
            "misc/libmisc-scalarFunctions",
            "misc/libmisc-vectorFunctions"
        ]
    },

    "Mesh": {
        "Type":        "BrickBuilder",
        "Origin":      [-3, -3, -3],
        "E1":          [ 6,  0,  0],
        "E2":          [ 0,  6,  0],
        "E3":          [ 0,  0,  6],
        "N1":          16,
        "N2":          16,
        "N3":          16,
        "RestartFile": "",

        "AdaptRef": {
            "Freq":          -1,
            "Width":         10,
            "CoarsestLevel": 0,
            "FinestLevel":   0,
            "SD":            0.1,
            "CurvDiff":      -1,
            "Discontinuous": 0
        }
    },

    "Time":
    {
        "Read" : 0,
        "Write": "yes",
        "NumSteps":	1,
        "FinalTime": 0.1
    },

    "SurfTransp": {

        "Exp": {
            "RadDrop":  [1, 0, 0],
            "PosDrop":  [0, 0, 0],
            "RadTorus": [1, 0.1],
            "Velocity": [0.0, 0.0, 0.0],

            "StationaryPDE": false,
            "Wind":			"ConstantWind",
            "Levelset":		"SphereDist",
            "Levelset2":		"MovingEllipsoid",
            "Normal":		"NormalMovingEllipsoid",
            "Rhs":			"HeatConductionRhs",
            "Solution":		"HeatConductionSol",
            "SurfGradSol":  "HeatConductionSurfGradSol"
        },
        "Method":      "NarrowBandStabilization",
	"Method2":     "characteristic-transport",
        "UseMassDiv": true,
        "Visc": 1.0,
        "Theta":      1,
        "Solver": {
            "PcAIter":      500,
            "PcATol":       1e-4,
            "PcBIter":      500,
            "PcBTol":       1e-4,
            "Iter": 1000,
            "Tol":  1e-9
        },
        "XFEMReduced":             -1,
        "FEDegree":                2,
        "NormalLaplaceCoefficient": 1.0,
        "SolutionOutput": {
            "Freq":   0,
            "Path":   "../../output/solutions/iface_sol",
            "Binary": true
        }
    },

    "Levelset": {
        "Solver": {
            "Tol":           1e-14,
            "Iter":          500
        },
        "SD":            0.1,
        "CurvDiff":      -1,
        "VolCorrection": "",
        "Theta":         1,
        "Discontinuous": 0
    },

    "LevelsetMapper": {
        "Tol":               1e-7,
        "Iter":              20,
        "ArmijoConstant":    1e-2,
        "Method":            "Newton",
        "MaxDampingSteps":   8,
        "TrustRegion":       1.0,
        "DeformationMethod": "map_zero_level_sets"
    },

    "VTK": {
        "Freq":           1,
        "VTKDir":         "../../output/",
        "VTKName":        "surfactant",
        "TimeFileName":   "surfactant",
        "Binary":         1,
        "UseOnlyP1":      false,
        "ReUseTimeFile":  false,
        "UseDeformation": "0",
        "AddP1XPressure": "0",
        "AddDGOutput":    "0"
    },    
    "Parameters": {
        "d1":           1,
        "d2":           10,
        "gamma":        30,
        "a":            0.1,
        "b":            0.9,
        "EndTime":      5,
        "delta":        0.1,
        "epsilon":      0.01,
        "TimeStep":     0.001
    }
}
